        };
        
//koniec ilosc boczkow.........................
        
//obliczanie wymiarów szafy.........................
       
        var drzwi ='<p>'+(wys - 4)+' x '+((szer-(iloscDrzwi * 2.5))/iloscDrzwi).toPrecision(3)+' - '+ iloscDrzwi+'szt.</p>';     
        var boczekNadstawki = '<p><i>'+ (wysNads)+'</i>' + ' x ' + (gleb - 10 ) + ' - ' + (2*iloscReg) + 'szt.</p>';
        var regaly = '<p><i>' +(wys - wysNads - 2) + '</i> x  <i>' + (gleb - 10) + '</i> - '+ (2*iloscReg)+ 'szt.</p><p><i>' + ((szerReg - (3.6 * iloscReg))/ iloscReg).toPrecision(3) + '</i> x ' + (gleb - 10) + ' - ' + (4*iloscReg) + 'szt.</p>'; 
        
            
            
            
        wynik = $('#wynik')[0].innerHTML = text1 + text2 + text3 + text4 + textBoczki + drzwi + boczekNadstawki + regaly;
       
        
  }); 
