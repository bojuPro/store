        wynik += text4;
//koniec wnetrze regalu4....................
//ilosc boczkow.............................   
        iloscBoczkow = $('#iloscBoczkow').val();
        var textBoczki;
        switch(iloscBoczkow){
            case "1":
                textBoczki = '<p><i>'+ wys + '</i> x '+ gleb +' - 1szt.</p><p><b>' + wys + '</b> x 10 - 1szt.</p>'; 
                break;    
            case "2":
