<script type="text/javascript">
    
    var szer ;
    var gleb;
    var wys;
    var iloscReg;
    var iloscBoczkow;
    var iloscDrzwi;
    var wysNads;
    var szerReg;
    
    $('#szafa').change(function test(){
//obliczWnetrze();
        wys = parseFloat($('#wys').val());
        gleb = parseFloat($('#gleb').val());
        szer = parseFloat($('#szer').val());
        iloscReg = $('#iloscReg').val();
        wysNads = parseFloat($('#wysNads').val());
        szerReg = parseFloat($('#szerReg').val());
        iloscDrzwi = parseFloat($('#doors').val());
 
        
//ilosc regalow version 1.
        var wnetrze1 = $('#reg1').val();
        var wnetrze2 = $('#reg2').val();
        var wnetrze3 = $('#reg3').val();
        var wnetrze4 = $('#reg4').val();
        
        switch(iloscReg){
            case "1":
                $('.reg1').css('display', 'block');
                $('.reg2').css('display', 'none');
                $('.reg3').css('display', 'none');
                $('.reg4').css('display', 'none');
                break;    
            case "2":
                $('.reg1').css('display', 'block');
                $('.reg2').css('display', 'block');
                $('.reg3').css('display', 'none');
                $('.reg4').css('display', 'none');
                break;
            case "3":
                $('.reg1').css('display', 'block');
                $('.reg2').css('display', 'block');
                $('.reg3').css('display', 'block');
                $('.reg4').css('display', 'none');
                break;
            case "4":
                $('.reg1').css('display', 'block');
                $('.reg2').css('display', 'block');
                $('.reg3').css('display', 'block');
                $('.reg4').css('display', 'block');
                break;
            default:
                $('.reg1').css('display', 'block');
                $('.reg2').css('display', 'none');
                $('.reg3').css('display', 'none');
                $('.reg4').css('display', 'none');
        };
//koniec ilosc regalow, wyswietlanie pola wyboru 
        
    
//wnetrze regalu1.........................
        var wnetrze1 = $('#reg1').val();
        var text1;
        switch(wnetrze1){
            case "0":
                text1 = "";
                break;
            case "1":
                text1  = '<p><i>' + (((szerReg - (3.6 * iloscReg))/ iloscReg)-6.2).toPrecision(3) + '</i> x 18 - 2szt.</p><p><i>' + (gleb - 10) + '</i> x 18 - 2szt.</p><p><i>' + ((szerReg - (3.6 * iloscReg))/ iloscReg).toPrecision(3) + '</i> x ' + (gleb - 10) + ' - 1szt.</p>';
                break;
            case "2":
                text1 = '<p><i>' + (((szerReg - (3.6 * iloscReg))/ iloscReg)-6.2).toPrecision(3) + '</i> x 18 - 4szt.</p><p><i>' + (gleb - 10) + '</i> x 18 - 4szt.</p><p><i>' + ((szerReg - (3.6 * iloscReg))/ iloscReg).toPrecision(3) + '</i> x ' + (gleb - 10) + ' - 1szt.</p>';
                break;
            case "3":
                text1 = '<p><i>' + (((szerReg - (3.6 * iloscReg))/ iloscReg)-6.2).toPrecision(3) + '</i> x 18 - 6szt.</p><p><i>' + (gleb - 10) + '</i> x 18 - 6szt.</p><p><i>' + ((szerReg - (3.6 * iloscReg))/ iloscReg).toPrecision(3) + '</i> x ' + (gleb - 10) + ' - 1szt.</p>';
                break;
            case "4":
                text1 = '<p><i>' + (((szerReg - 3.6 * iloscReg)/iloscReg)).toPrecision(3) + '</i> x ' + (gleb - 11) + ' - 1szt.</p>';
                break;
            case "5":
                text1 = '<p><i>' + (((szerReg - 3.6 * iloscReg)/iloscReg)).toPrecision(3) + '</i> x ' + (gleb - 11) + ' - 2szt.</p>';
                break;
            case "6":
                text1 = '<p><i>' + (((szerReg - 3.6 * iloscReg)/iloscReg)).toPrecision(3) + '</i> x ' + (gleb - 11) + ' - 3szt.</p>';
                break;
            case "7":
                text1 = '<p><i>' + (((szerReg - 3.6 * iloscReg)/iloscReg)).toPrecision(3) + '</i> x ' + (gleb - 11) + ' - 4szt.</p>';
                break;
            default :
                text1 = "";
            };
        var wynik = $('#wynik')[0].innerHTML = text1;
//koniec wnetrze regalu1....................
        
//wnetrze regalu2..........................
        var wnetrze2 = $('#reg2').val();
        var text2;
        switch(wnetrze2){
            case "0":
                text2 = "";
                break;
            case "1":
                text2  = '<p><i>' + (((szerReg - (3.6 * iloscReg))/ iloscReg)-6.2).toPrecision(3) + '</i> x 18 - 2szt.</p><p><i>' + (gleb - 10) + '</i> x 18 - 2szt.</p><p><i>' + ((szerReg - (3.6 * iloscReg))/ iloscReg).toPrecision(3) + '</i> x ' + (gleb - 10) + ' - 1szt.</p>';
                break;
            case "2":
                text2 = '<p><i>' + (((szerReg - (3.6 * iloscReg))/ iloscReg)-6.2).toPrecision(3) + '</i> x 18 - 4szt.</p><p><i>' + (gleb - 10) + '</i> x 18 - 4szt.</p><p><i>' + ((szerReg - (3.6 * iloscReg))/ iloscReg).toPrecision(3) + '</i> x ' + (gleb - 10) + ' - 1szt.</p>';
                break;
            case "3":
                text2 = '<p><i>' + (((szerReg - (3.6 * iloscReg))/ iloscReg)-6.2).toPrecision(3) + '</i> x 18 - 6szt.</p><p><i>' + (gleb - 10) + '</i> x 18 - 6szt.</p><p><i>' + ((szerReg - (3.6 * iloscReg))/ iloscReg).toPrecision(3) + '</i> x ' + (gleb - 10) + ' - 1szt.</p>';
                break;
            case "4":
                text2 = '<p><i>' + (((szerReg - 3.6 * iloscReg)/iloscReg)).toPrecision(3) + '</i> x ' + (gleb - 11) + ' - 1szt.</p>';
                break;
            case "5":
                text2 = '<p><i>' + (((szerReg - 3.6 * iloscReg)/iloscReg)).toPrecision(3) + '</i> x ' + (gleb - 11) + ' - 2szt.</p>';
                break;
            case "6":
                text2 = '<p><i>' + (((szerReg - 3.6 * iloscReg)/iloscReg)).toPrecision(3) + '</i> x ' + (gleb - 11) + ' - 3szt.</p>';
                break;
            case "7":
                text2 = '<p><i>' + (((szerReg - 3.6 * iloscReg)/iloscReg)).toPrecision(3) + '</i> x ' + (gleb - 11) + ' - 4szt.</p>';
                break;
            default :
                text2 = "";
            };
        wynik += text2;
//koniec wnetrze regalu2....................

//wnetrze regalu1...........................
        var wnetrze3 = $('#reg3').val(); 
        var text3;
        switch(wnetrze3){
            case "0":
                text3 = "";
                break;
            case "1":
                text3  = '<p><i>' + (((szerReg - (3.6 * iloscReg))/ iloscReg)-6.2).toPrecision(3) + '</i> x 18 - 2szt.</p><p><i>' + (gleb - 10) + '</i> x 18 - 2szt.</p><p><i>' + ((szerReg - (3.6 * iloscReg))/ iloscReg).toPrecision(3) + '</i> x ' + (gleb - 10) + ' - 1szt.</p>';
                break;
            case "2":
                text3 = '<p><i>' + (((szerReg - (3.6 * iloscReg))/ iloscReg)-6.2).toPrecision(3) + '</i> x 18 - 4szt.</p><p><i>' + (gleb - 10) + '</i> x 18 - 4szt.</p><p><i>' + ((szerReg - (3.6 * iloscReg))/ iloscReg).toPrecision(3) + '</i> x ' + (gleb - 10) + ' - 1szt.</p>';
                break;
            case "3":
                text3 = '<p><i>' + (((szerReg - (3.6 * iloscReg))/ iloscReg)-6.2).toPrecision(3) + '</i> x 18 - 6szt.</p><p><i>' + (gleb - 10) + '</i> x 18 - 6szt.</p><p><i>' + ((szerReg - (3.6 * iloscReg))/ iloscReg).toPrecision(3) + '</i> x ' + (gleb - 10) + ' - 1szt.</p>';
                break;
            case "4":
                text3 = '<p><i>' + (((szerReg - 3.6 * iloscReg)/iloscReg)).toPrecision(3) + '</i> x ' + (gleb - 11) + ' - 1szt.</p>';
                break;
            case "5":
                text3 = '<p><i>' + (((szerReg - 3.6 * iloscReg)/iloscReg)).toPrecision(3) + '</i> x ' + (gleb - 11) + ' - 2szt.</p>';
                break;
            case "6":
                text3 = '<p><i>' + (((szerReg - 3.6 * iloscReg)/iloscReg)).toPrecision(3) + '</i> x ' + (gleb - 11) + ' - 3szt.</p>';
                break;
            case "7":
                text3 = '<p><i>' + (((szerReg - 3.6 * iloscReg)/iloscReg)).toPrecision(3) + '</i> x ' + (gleb - 11) + ' - 4szt.</p>';
                break;
            default :
                text3 = "";
            };
        
        wynik += text3;
//koniec wnetrze regalu3....................
//wnetrze regalu4...........................
        var wnetrze4 = $('#reg4').val();
        var text4;

        switch(wnetrze4){
            case "0":
                text4 = "";
                break;
            case "1":
                text4  = '<p><i>' + (((szerReg - (3.6 * iloscReg))/ iloscReg)-6.2).toPrecision(3) + '</i> x 18 - 2szt.</p><p><i>' + (gleb - 10) + '</i> x 18 - 2szt.</p><p><i>' + ((szerReg - (3.6 * iloscReg))/ iloscReg).toPrecision(3) + '</i> x ' + (gleb - 10) + ' - 1szt.</p>';
                break;
            case "2":
                text4 = '<p><i>' + (((szerReg - (3.6 * iloscReg))/ iloscReg)-6.2).toPrecision(3) + '</i> x 18 - 4szt.</p><p><i>' + (gleb - 10) + '</i> x 18 - 4szt.</p><p><i>' + ((szerReg - (3.6 * iloscReg))/ iloscReg).toPrecision(3) + '</i> x ' + (gleb - 10) + ' - 1szt.</p>';
                break;
            case "3":
                text4 = '<p><i>' + (((szerReg - (3.6 * iloscReg))/ iloscReg)-6.2).toPrecision(3) + '</i> x 18 - 6szt.</p><p><i>' + (gleb - 10) + '</i> x 18 - 6szt.</p><p><i>' + ((szerReg - (3.6 * iloscReg))/ iloscReg).toPrecision(3) + '</i> x ' + (gleb - 10) + ' - 1szt.</p>';
